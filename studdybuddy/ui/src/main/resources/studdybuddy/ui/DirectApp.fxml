<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" prefHeight="640.0" prefWidth="350.0" fx:controller="studdybuddy.ui.AppController">
    <fx:define>
        <String fx:id="userStuddyBuddyPath" fx:value="studdybuddy.json"/>
        <String fx:id="directStuddyBuddiesResource" fx:value="directBuddies.json"/>
    </fx:define>
    <Label text="Welcome to " layoutX="50.0" layoutY="50.0" prefHeight="200"/>

    <ImageView fx:id="studdyBuddyLogo" fitHeight="50.0" fitWidth="250.0" layoutX="50.0" layoutY="200.0">
            <Image url="@StuddyBuddy1.png"/>
    </ImageView>

    <Button text="Login" fx:id="loginButton" onAction="#handleLogin" layoutX="100.0" layoutY="350.0" prefWidth="150.0"/>

    <Button text="Register new buddy" fx:id="registerButton" onAction="#handleRegister" layoutX="100.0" layoutY="380.0" prefWidth="150.0"/>
</AnchorPane>
