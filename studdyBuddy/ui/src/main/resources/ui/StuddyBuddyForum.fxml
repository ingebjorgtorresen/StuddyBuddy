<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.StuddyBuddyForumController" prefHeight="640.0" prefWidth="350.0">
    <ImageView fx:id="studdyBuddyLogo" fitHeight="50.0" fitWidth="250.0" layoutX="5.0" layoutY="5.0">
            <Image url="@StuddyBuddy1.png"/>
    </ImageView>
    
    <ImageView fx:id="userIcon" fitHeight="10.0" fitWidth="10.0" layoutX="10.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true" >
            <Image url="@userIcon.png" />
    </ImageView>

    <Label fx:id="username" layoutX="30.0" layoutY="60.0"/>
    <Button fx:id="logOut" layoutX="300.0" layoutY="60.0" text="Log out"/>

    <Line layoutX="10.0" layoutY="90.0" endX="330" />

    <Label text="Registrations" fx:id="registrationsTitle" layoutX="10.0" layoutY="150.0"/>
    <Button text="Add registration" fx:id="addRegistrationButton" onAction="#handleAddRegistration" layoutX="250.0" layoutY="150.0"/>
    
     <ScrollPane fx:id="regScrollPane">
        <content>
            <Label fx:id="allRegistrationsText" layoutX="10.0" layoutY="200.0"/>
        </content>
    </ScrollPane> 

</AnchorPane>